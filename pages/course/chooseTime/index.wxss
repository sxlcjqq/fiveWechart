/* index.wxss */

page {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.chooseData {
  width: 50%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
  position: relative;
  padding-top:70rpx;
}

.chooseData .text {
  position:absolute;
  top:0;
  left:0;
  font-size: 28rpx;
  color: #333;
  line-height: 2.5;
  text-align: center;
  width: 100%;
}
.timescroll{
  height: 100%;
  overflow: auto;
  background:#f7f7f7;
  margin:  0 10rpx;
  padding:20rpx;
}
.timescrollbtn{
  border-radius: 10rpx;
  line-height: 2;
  padding:0 20rpx;
  color:#999999;
  font-size: 26rpx;
  text-align: center;
}
.timescrollbtn.active{
  color:#ffffff;
  background:#f44;
}
.bottombtn {
  width: 48.5%;
  line-height: 2.5;
  border-radius: 5rpx;
  font-size: 26rpx;
  text-align: center;
  color: #fff;
  display: inline-block;
  margin-right: 1%;
}

.bottombtn.gray {
  background-color: #333;
  margin-left: 1%;
}

.bottombtn.red {
  background-color: #f44;
}
.bottombtn.black {
  border:1px solid #000000;
  color:#000000;
  width: 100rpx;
  line-height: 1.5;
  float:right;
}

.border-radius.pink-bg {
  border-radius: 50%;
  background-color: #f44;
  color: #fff;
}
.queding{
position:absolute;
bottom:10rpx;
right:10rpx;
width:150rpx;
display:block;
line-height:2;
}
.already{
  margin:20rpx;
}
.already .text{
font-size: 30rpx;
  color: #333;
  border-bottom:6rpx double #999999;
  padding:0 10rpx;
  line-height: 2;
}
.redtip{
  font-size: 22rpx;
  color:#f44;
}
.chooselist{
  font-size: 26rpx;
  color: #000000;
  line-height: 2;
  border-bottom:1rpx solid #999999;
  padding:10rpx;
}