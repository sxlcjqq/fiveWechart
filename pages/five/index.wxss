/* pages/five/index.wxss */

.input {
  border: 1rpx solid #efefef;
  margin: 30rpx 5%;
  width: 90%;
  line-height: 2;
  font-size: 30rpx;
  padding: 30rpx;
}

.label {
  font-size: 40rpx;
}

.box {
  background: #F6D67B;
  margin:20rpx 0;
}

.grid {
  width: 50rpx;
  float: left;
  height: 50rpx;
  position: relative;
}

.white-chess {
  width: 70%;
  height: 70%;
  border-radius: 50%;
  background: radial-gradient(10% 10% at 15% 15%, #fff, #e2e2e2);
  box-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
  position: absolute;
  left:15%;
  top:15%;
}

.black-chess {
  width: 70%;
  height: 70%;
  border-radius: 50%;
  background: radial-gradient(10% 10% at 15% 15%, #fff, #333);
  box-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.4);
  position: absolute;
  left:15%;
  top:15%;
}
.col{
height: 100%;
width: 1px;
margin: auto;
background: #000000;
}
.row{
  width: 100%;
  height: 1px;
  background: #000000;
  position: absolute;
  left: 0;
  top: 50%;
}
